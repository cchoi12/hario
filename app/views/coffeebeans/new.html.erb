<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 card form">

  <h1> New Beans </h1>

  <%= simple_form_for @coffeebeans do |f| %>
    <%= f.input :name %>
    <%= f.input :brand %>
    <%= f.input :roast_type, as: :select,
                collection: ["Light Roast",
                               "Light City",
                               "Half City",
                               "Cinnamon",
                               "Medium Roast",
                               "City",
                               "American",
                               "Breakfast",
                               "Full City",
                               "Dark Roast",
                               "Continental",
                               "European",
                               "Espresso",
                               "Italian",
                               "French"] %>
    <%= f.input :best_by, as: :datepicker %>
    <%= f.input :notes %>
    <%= f.input :score, collection: 1..10 %>
    <br />
    <%= f.submit 'Post it mon!', class: 'my-btn' %>
  <% end %>
