.coffeebeans-bg
  .container
    .row
      .col-xs-5.col-xs-offset-1.col-md-4.col-md-offset-4
        .log-in.panel
          .panel-heading
            %h2 New Beans
          = simple_form_for @coffeebeans do |f|
            = f.error_notification
            .panel-body
              = f.input :name, required: true, placeholder: 'Name of your Beans'
              = f.input :brand, required: true, placeholder: 'Brand name'
              = f.input :roast_type, required: true, as: :select,
                          collection: ["Light Roast",
                                         "Light City",
                                         "Half City",
                                         "Cinnamon",
                                         "Medium Roast",
                                         "City",
                                         "American",
                                         "Breakfast",
                                         "Full City",
                                         "Dark Roast",
                                         "Continental",
                                         "European",
                                         "Espresso",
                                         "Italian",
                                         "French"]
              = f.input :best_by, required: true, :as  => :date_picker
              = f.input :notes, required: true, placeholder: 'Flavor is easier to recall when you write about it!'
              = f.input :score, required: true, collection: 1..10
              = f.button :submit, "Shelf it", class: 'btn-success btn-block'
